!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title GreatHappiness
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .header
      .header-content
        %h1.header-content__left 
          = link_to 'Great happiness', root_path, class: 'header-content__left__title'
        -if user_signed_in? && current_user.id
          %ul.header-content__right
            %li.header-content__right__list お題
            %li.header-content__right__list 
              = link_to 'ログアウト', destroy_user_session_path, method: :delete
            %li.header-content__right__list 
              = link_to current_user.name, users_path(current_user)
            %li.header-content__right__list 画像
    = yield
