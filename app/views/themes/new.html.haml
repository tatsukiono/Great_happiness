.group-content
  .new-content
    .title お題の作成
    .new-content__theme
      = form_for  @theme do |f|
        = f.text_area :title, placeholder: "お題", cols: "50", rows: "10", class: 'new-content__theme__text'
        = f.file_field :image
        = f.submit value: '投稿', class: 'new-content__theme__submit'
